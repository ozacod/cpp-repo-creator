{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.go": {
      "maxDuration": 10,
      "includeFiles": "forge-server-go/recipes/**"
    }
  },
  "env": {
    "FORGE_RECIPES_DIR": "forge-server-go/recipes"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.go"
    },
    {
      "source": "/docs",
      "destination": "/api/index.go"
    },
    {
      "source": "/openapi.json",
      "destination": "/api/index.go"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}